<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default = "dev">
        <environment id = "dev">
            <transactionManager type = "JDBC"/>  <!-- 수동 commit -->
            <dataSource type = "POOLED"> <!-- connection pool 활용(미리 DB와 연동하기 위한 Connection을 여러개 준비해두고 요청이 들어오면 대여) -> 최적화 -->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/menudb"/>
                <property name="username" value="swcamp"/>
                <property name="password" value="swcamp"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mapper.xml"/> <!-- mapper.xml 등록 -->
    </mappers>
</configuration>

